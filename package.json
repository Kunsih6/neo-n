{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint": "yarn lint:js && yarn lint:style",
    "predeploy:merge-deps": "cd functions && node merge-dependencies.js && npm install && cd ..",
    "predeploy:functions": "rm -rf functions/.nuxt && yarn build && mkdir -p functions/.nuxt/dist && cp -r .nuxt/dist/ functions/.nuxt/ && babel configs/ --out-dir functions/configs && babel nuxt.config.js --out-file functions/nuxt.config.js",
    "predeploy:hosting": "rm -rf public/* && mkdir -p public/nuxt && cp -r functions/.nuxt/dist/client/ public/nuxt && cp -a static/. public/"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@marvr/storyblok-rich-text-vue-renderer": "^2.0.1",
    "@nuxtjs/ngrok": "^2.0.0",
    "@nuxtjs/pwa": "^3.0.2",
    "@vue/composition-api": "^1.0.0-beta.21",
    "core-js": "^3.6.5",
    "nuxt": "^2.14.12",
    "nuxt-i18n": "^6.16.0",
    "storyblok-nuxt": "^1.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nuxtjs/eslint-config": "^5.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/svg": "^0.1.12",
    "@nuxtjs/tailwindcss": "^3.3.4",
    "autoprefixer": "10",
    "babel-eslint": "^10.1.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "fibers": "^5.0.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.4.0",
    "postcss": "8",
    "prettier": "^2.1.2",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  }
}
